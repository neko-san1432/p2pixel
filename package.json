{
  "name": "p2pixel",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/dist/main.js",
  "scripts": {
    "dev": "node scripts/dev-runner.mjs",
    "build": "tsc && vite build && tsc -p electron/tsconfig.json",
    "dist": "npm run build && electron-builder",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.p2pixel.app",
    "productName": "P2Pixel",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/dist/**/*",
      "electron/package.json"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "@chainsafe/libp2p-gossipsub": "latest",
    "@chainsafe/libp2p-noise": "latest",
    "@libp2p/identify": "latest",
    "@libp2p/kad-dht": "latest",
    "@libp2p/mdns": "^12.0.10",
    "@libp2p/ping": "latest",
    "@libp2p/tcp": "latest",
    "@libp2p/yamux": "latest",
    "chokidar": "^4.0.3",
    "libp2p": "latest",
    "multiaddr": "latest",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/chokidar": "^2.1.3",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  }
}
